<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="SympliTextView">
        <attr name="fontPath" format="string"/>

        <!-- Inner shadow settings. -->
        <attr name="innerShadowColor" format="color"/>
        <attr name="innerShadowDx" format="dimension"/>
        <attr name="innerShadowDy" format="dimension"/>
        <attr name="innerShadowRadius" format="dimension"/>

        <!-- Outer shadow settings. -->
        <attr name="outerShadowColor" format="color"/>
        <attr name="outerShadowDx" format="dimension"/>
        <attr name="outerShadowDy" format="dimension"/>
        <attr name="outerShadowRadius" format="dimension"/>
    </declare-styleable>

    <style name="text_view_6_style" parent="android:Widget.TextView">
        <item name="fontPath">fonts/${FONT_FILE}</item>
        <item name="android:textColor">@color/outer_space</item>
        <item name="android:textSize">@dimen/text_view_6_size</item>
        <item name="android:textStyle">normal</item>

    </style>

</resources>
